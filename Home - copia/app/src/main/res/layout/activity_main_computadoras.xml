<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fondoCom"
    android:orientation="vertical"

    android:gravity="bottom"
    tools:context="com.studios.patota.homecontrol.MainActivityComputadoras"
    android:weightSum="1">



    <TextView
        android:id="@+id/Titulo"
        android:layout_width="273dp"
        android:layout_height="32dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="@string/SisCom"
        android:textAlignment="center"
        android:textColor="@color/colorMenu"
        android:textSize="30dp"
        android:layout_weight="0.07" />

    <ListView
        android:id="@+id/menuCom"
        android:layout_width="183dp"
        android:layout_height="188dp"
        android:layout_gravity="right"
        android:layout_weight="0.60"
        android:background="@drawable/liststyle"
        android:gravity="top" />


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_weight="0.18">

        <Button

            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="29dp"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:background="@drawable/btnslec1"
            android:onClick="Salir"
            android:text="@string/btnsalida" />


        <Button
            android:id="@+id/BtnMas"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/boton_mas"
            android:text="@string/btnMas"
            android:textColor="@color/colorMenu"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp"
            android:layout_above="@+id/button4"
            android:layout_toLeftOf="@+id/BtnAdd"
            android:layout_toStartOf="@+id/BtnAdd" />

        <Button
            android:id="@+id/BtnAdd"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_add"
            android:text="@string/btnAdd"
            android:onClick="add"
            android:textColor="@color/colorMenu"
            android:layout_alignBottom="@+id/BtnMas"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
